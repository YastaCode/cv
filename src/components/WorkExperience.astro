---
interface Props {
  work: {
    name: string;
    position: string;
    url?: string; // Optionnel
    startDate: string;
    endDate: string | null; // Peut Ãªtre null si toujours en poste
    summary: string;
    highlights: string[];
    keywords: string[];
  };
}

const { work } = Astro.props;
const startDate = new Date(work.startDate);
const endDate = work.endDate ? new Date(work.endDate) : null;
const formatDate = (date: Date) => {
    return new Intl.DateTimeFormat('fr-FR', { month: 'long', year: 'numeric' }).format(date)
}
---

<div class="work-experience">
    <div class="work-experience-header">
        <div class="company">
            <h3>{
                work.url ? <a href={work.url} target="_blanc">{work.name}</a> : work.name
                }
            </h3>
        </div>
        <div class="date">
            {formatDate(startDate)} - {endDate ? formatDate(endDate) : 'Aujourd\'hui'}
        </div>
    </div>
    <div class="work-experience-body">
        <h4>{work.position}</h4>
        <p>{work.summary}</p>
        <ul class="highlights">
            {work.highlights.map((highlight) => <li>{highlight}</li>)}
        </ul>
        <div class="keywords">
            {work.keywords.map((keyword) => 
                <a href="#" class="keyword" target="_blank">{keyword}</a>
            )}
        </div>
    </div>
</div>

<style>
    .work-experience{
        border: 1px solid #e9e9e9;
        border-radius: 0.5rem;
        padding: 1rem;
        margin-top: 1.5rem;
    }
    .work-experience:nth-of-type(1){
        margin-top: 0;
    }
    .work-experience-header{
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;

    }
    .company h3 a{
        color: #777;
        transition: .3s ease;
    }
    .company h3 a:hover{
        text-decoration: underline;
        color: #333;
    }
    .date{
        font-size: .75rem;
        color: #777;
    }
    .work-experience-body{
    
    }
    .highlights{
        list-style-type:circle;
        color: #999;

    }
    .keywords{
        margin-top: 9px;
        display: flex;
        flex-wrap: wrap;
        justify-content: start;
        gap: 0.2rem;
    }
    .keywords a{
        background: #f1f1f1;
        border: 1px solid #e5e5e5;
        border-radius: 0.2rem;
        padding: 1px 10px;
        font-size: .75rem;
        color: #333;
        transition: .3s ease background;
    }
    .keywords a:hover{
        background: #e1e1e1;
        border: 1px solid #ed1d1d1;
    }
    @media screen and (min-width: 768px) {
        .keywords{
            justify-content: end;
        }
    }
</style>
