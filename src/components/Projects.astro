---
const {project} = Astro.props;
---

<div class="project-grid-item">
    <h3><a href="">{project.title}</a><span>.</span></h3>
    <p>{project.summary}</p>
    <div class="tags">
        {project.tags.map(tag => 
            <a href="">{tag}</a>
        )}
    </div>
</div>

<style>
    .project-grid-item{
        background: #fff;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        padding: 1rem;
        transition: .3s ease;
    }
    .project-grid-item:hover{
        transform: scale(1.05);
    }
    .project-grid-item h3{
        display: flex;
        align-items: center;
        border-bottom: 1px solid #e1e1e1;
        line-height: 1.5;
        span{
            display: flex;
            align-items: center;
            color: green;
        }
    }
    .project-grid-item p{
        text-wrap: pretty;
        font-size: 0.8rem;
        padding: 0.5rem 0;
    }
    .tags{
        display: flex;
        justify-content: start;
        gap: 0.3rem;
        a{
            margin-top: 0.5rem;
            background: #f1f1f1;
            padding: 2px 8px;
            border-radius: 0.2rem;
            border: 1px solid #e1e1e1;
            font-size: 0.76rem;
        }
    }
</style>